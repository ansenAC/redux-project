.input-panel {

    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;

    font-size: 12px;

    .error {

        position: absolute;
        top: -34px;
        left: 0;
        right: 0;

        display: none;
        text-align: center;
        user-select: none;

        &.active {
            display: block;
        }
    }

    .error-text {
        border: 1px solid #b5d2f0;
        background-color: #e5f2ff;
        color: #3f76ac;
        display: inline-block;
        padding: 6px 8px;
        border-radius: 2px;
        box-shadow: 0px 1px 3px rgba(0,0,0,0.15);
    }

    .form-text {
        width: 100%;
        height: 70px;

        border: 1px solid #dedddc;
        border-radius: 2px;
        font-size: 12px;
        font-family: PingHei, "Hiragino Sans GB", "Microsoft YaHei";
        line-height: 1.4;
        padding: 6px 8px;
        outline: none;
        overflow-y: auto;
        transition-property: border-color, box-shadow;

        &:focus {
            border-color: #f90;
        }
    }

    .footer {
        text-align: right;
        margin-top: 8px;
        user-select: none;
    }

    .btn-emotion {
        border-right: none;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        height: 26px;
        width: 26px;
        position: relative;

        background-color: #D6D6D6;
        &:active {
            box-shadow: none;
            color: #6D6D6D;
        }
    }
    .icon-emotion {
        font-size: 15px;
        position: absolute;
        top: 4px;
        left: 5px;
    }
    .btn-send {
        border-color: #c2c1c0;
        border-left-color: #c2c1c0;
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        background-color: #D6D6D6;
        background-image: none;
        color: #6D6D6D;

        &:active {
            box-shadow: none;
        }

        // gradient-vertical(#FFF, #f0f1f2);

        // &:hover {
