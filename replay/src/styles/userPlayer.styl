.my-player,
.teacher-player,
.active-user {
    width: $camera-player-width;
    height: $camera-player-height;
}

.teacher-player {

    position: absolute;
    top: 0;

    .player-wrapper {
        overflow: hidden;
        position: absolute;
        top: 0;
        height: 100%;
        width: 100%;
    }

    .popup-wrapper {
        position: fixed;
        z-index: $popup-index;
        .action-player {
            bottom: -30px;

            .popup {
                display: none;
            }

            .popdown {
                display: block;
            }
        }

        &:hover {
            .action-player {
                bottom: 0;
                transition: 0.2s bottom ease-in;
            }
        }
    }

    .video-loading {
        background-color: rgba(0, 0, 0, 0.6);
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        z-index: 5;

        .loading {
            position: absolute;
            left: 50%;
            top: 50%;

            margin-left: -30px;
            margin-top: -25px;
            height: 40px;
            width: 62px;
        }

        .loading-grid {
            display: inline-block;
            height: 100%;
            width: 5px;
            margin: 0 3px 0 4px;
            background-color: #FF7700;
            animation: loading-delay 1.2s infinite ease-in-out;

            &.grid2 {
                animation-delay: -1.1s;
            }

            &.grid3 {
                animation-delay: -1.0s;
            }

            &.grid4 {
                animation-delay: -0.9s;
            }

            &.grid5 {
                animation-delay: -0.8s;
            }
        }

        .loading-hint {
            position: absolute;
            top: 65%;
            left: 50%;
            width: 140px;
            font-size: 12px;
            color: #FF7700;
            transform: translateX(-50%);
        }
    }

    .growing {
        transition: 0.3s all ease-in;
    }

    .action-player {
        position: absolute;
        height: 25px;
        width: 100%;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);

        .action {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);

            font-size: 16px;
            color: #FFF;
        }

        .popup {
            display: block;
            right: 5px;
            cursor: pointer;
        }

        .popdown {
            display: none;
            right: 5px;
            cursor: pointer;
        }

        .webcam,
        .microphone {
            font-size: 17px;
        }

        .webcam {
            left: 5px;
        }

        .microphone {
            left: 30px;
        }
    }



    video {
        height: 100%;
        width: 100%;
        background-color: #000;
    }

    .user-card {
        position: absolute;
        left: 0;
        top: 0;

        background-color: #E6E6E6;
        width: 100%;
        height: 100%;

        &.show-card {
            z-index: 2;
        }


        .media-info {
            position: absolute;
            left: 0;
            width: 100%;
            text-align: center;

            top: 40px;
        }

        .avatar {

            border: 2px solid #c1c1c1;
            border: 2px solid rgba(150, 150, 150, 0.5);

            width: 60px;
            height: 60px;
            border-radius: 50%;

        }

        .status {
            color: #b3b3b3;
            width: 100%;
            margin-top: 10px;
        }

    }
}

@keyframes loading-delay {
    0%, 40%, 100% {
        transform: scaleY(0.4);
    }

    20% {
        transform: scaleY(1.0);
    }
}


